@model SentenceClient.Models.IndexModel
<!--Section: Main info-->
<div>
    <section class="mt-5 fadeIn">
        <!--Grid row-->
        <div class="row">
            <!--Grid column-->
            <div class="col-md-12 mb-4">
                <form>
                    <div class="row">
                        @foreach (var section in Model.WordList.WordSections)
                        {
                            var listType = section.WordType.ToString();
                            <div class="form-group col-md-4">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label>@listType</label>
                                    </div>
                                    <div class="col-md-8">
                                        <select id="@listType" class="dynamic-select form-control">
                                            @foreach (var word in section.Words)
                                            {
                                                <option value="@word">@word</option>}
                                        </select>
                                    </div>
                                    <div class="col-md-4 ">
                                        <input type="button" class="form-control select-input" 
                                               name="@listType-input" value="Add" onclick="addWord(@listType)" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </section>
    <section class="mt-3">
        <div class="row">
            <div class="col-md-12">
                <form>
                    <div class="row">
                        <div class="col-md-9">
                            <input id="SentenceBox" readonly="readonly" type="text" aria-multiline="True" style="height: 100%; min-width: -webkit-fill-available " />
                        </div>
                        <div class="col-md-3">
                            <input id="ClearSentence" type="button" name="ClearSentence" value="Clear" class="btn btn-danger mx-1 sentence-buttons" />
                            <input id="SaveSentence" type="button" name="SaveSentence" value="Save" class="btn btn-success mx-1 sentence-buttons" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <hr class="my-3 bg-light">
    <div class="content">
        <h3 class="h3 mb-5">Sentence Creation History</h3>
        <ul id="SentenceContainer">
            @foreach (var s in Model.SentenceList.Sentences)
            {
                <li>@s.SentenceItem</li>
            }
        </ul>
    </div>
</div>

<div class="modal text-dark" id="SuccessModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-success">Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3>Your sentence has been stored successfully!</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal text-dark" id="DynamicErrorModel" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">Error</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3 id="ErrorValue"></h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>